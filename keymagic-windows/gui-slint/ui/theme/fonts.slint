export global Fonts {
    // Font families
    in property <string> default-font: "Segoe UI";
    in property <string> monospace-font: "Consolas";
    
    // Font sizes
    in property <length> size-xs: 11px;
    in property <length> size-sm: 12px;
    in property <length> size-base: 14px;
    in property <length> size-lg: 16px;
    in property <length> size-xl: 20px;
    in property <length> size-2xl: 24px;
    in property <length> size-3xl: 32px;
    
    // Font weights
    in property <int> weight-light: 300;
    in property <int> weight-normal: 400;
    in property <int> weight-medium: 500;
    in property <int> weight-semibold: 600;
    in property <int> weight-bold: 700;
}