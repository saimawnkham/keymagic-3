import { Colors } from "colors.slint";
import { Fonts } from "fonts.slint";

export global Styles {
    // Spacing
    in property <length> spacing-xs: 4px;
    in property <length> spacing-sm: 8px;
    in property <length> spacing-md: 16px;
    in property <length> spacing-lg: 24px;
    in property <length> spacing-xl: 32px;
    in property <length> spacing-2xl: 48px;
    
    // Border radius
    in property <length> radius-sm: 4px;
    in property <length> radius-md: 8px;
    in property <length> radius-lg: 12px;
    in property <length> radius-full: 999px;
    
    // Shadows
    in property <length> shadow-sm: 2px;
    in property <length> shadow-md: 4px;
    in property <length> shadow-lg: 8px;
    
    // Transitions
    in property <duration> transition-fast: 150ms;
    in property <duration> transition-normal: 250ms;
    in property <duration> transition-slow: 350ms;
}