export global Colors {
    // Primary colors
    in property <color> primary: #2196F3;
    in property <color> primary-light: #64B5F6;
    in property <color> primary-dark: #1976D2;
    
    // Status colors
    in property <color> success: #4CAF50;
    in property <color> error: #F44336;
    in property <color> error-light: #EF9A9A;
    in property <color> error-dark: #D32F2F;
    in property <color> warning: #FF9800;
    in property <color> info: #2196F3;
    
    // Neutral colors
    in property <color> background: #F5F5F5;
    in property <color> surface: #FFFFFF;
    in property <color> sidebar-bg: #37474F;
    in property <color> sidebar-text: #ECEFF1;
    in property <color> sidebar-hover: #455A64;
    in property <color> sidebar-active: #546E7A;
    
    // Text colors
    in property <color> text-primary: #212121;
    in property <color> text-secondary: #757575;
    in property <color> text-disabled: #BDBDBD;
    in property <color> text-on-primary: #FFFFFF;
    
    // Border colors
    in property <color> border: #E0E0E0;
    in property <color> border-focus: #2196F3;
    
    // Shadow
    in property <color> shadow: #00000026;
}