{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeyMagic",
  "version": "0.0.2",
  "identifier": "org.keymagic.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "KeyMagic Configuration",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": null,
      "nsis": null
    }
  }
}
